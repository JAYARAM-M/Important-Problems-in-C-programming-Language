#include<iostream>
using namespace std;
int main()
{
    int n,a[10],i;
    cout<<"enter a number:";
    cin>>n;
    for(i=0;n>0;i++)
    {
        a[i]=n%2;
        n=n/2;
    }
    
    cout<<"the reverse of number is : ";
    for(i=i-1 ;i>=0 ;i--)  
    {
        cout<<a[i];
    }
    
    
    
}
